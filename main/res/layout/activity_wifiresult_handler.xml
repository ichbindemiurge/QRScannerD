<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demiurge.qrscannerd.WIFIResultHandlerActivity">


    <LinearLayout
        android:id="@+id/wifi_result_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/app_bar"
            android:id="@+id/wifi_res_app_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </include>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/wifi_act_edittexts"
        android:orientation="vertical"
        android:layout_below="@+id/wifi_result_app_bar_layout"
        android:layout_above="@+id/wifi_res_gen_but"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/wifi_res_ssis"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wifi_res_password"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/wifi_res_gen_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="29dp"
        android:text="Connect" />



</RelativeLayout>
