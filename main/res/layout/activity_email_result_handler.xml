<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demiurge.qrscannerd.EMailResultHandlerActivity">

    <TextView
        android:id="@+id/recipient_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="41dp"
        android:editable="true"
        android:text="P" />

    <TextView
        android:id="@+id/subject_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recipient_email"
        android:layout_below="@+id/recipient_email"
        android:layout_marginTop="24dp"
        android:editable="true"
        android:text="P" />

    <TextView
        android:id="@+id/body_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/subject_email"
        android:layout_below="@+id/subject_email"
        android:layout_marginTop="22dp"
        android:editable="true"
        android:text="P" />

    <Button
        android:id="@+id/send_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="Send" />

</RelativeLayout>
