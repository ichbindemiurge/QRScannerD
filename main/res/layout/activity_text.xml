<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demiurge.qrscannerd.TextActivity">


    <LinearLayout
        android:id="@+id/text_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/app_bar"
            android:id="@+id/text_act_app_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </include>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textinput_generate_button"
        android:layout_below="@+id/text_app_bar_layout">

        <EditText
            android:id="@+id/text_input_encode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Please input your text here"
            android:inputType="textCapSentences|textMultiLine"
            android:scrollHorizontally="false"
            android:maxLength="2000"
            android:maxLines="100"
            android:paddingTop="30dp" />

    </LinearLayout>

    <Button
        android:id="@+id/textinput_generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="29dp"
        android:text="Click here to generate" />


</RelativeLayout>
