<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demiurge.qrscannerd.EmailActivity">

    <include
        layout="@layout/app_bar"
        android:id="@+id/email_activity_back_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </include>

    <EditText
        android:id="@+id/towhoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email_activity_back_bar"
        android:ems="10"
        android:hint="@string/to_who_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/bodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subjectText"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="@string/body_hint"
        android:inputType="textCapSentences|textMultiLine"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="68dp" />


    <EditText
        android:id="@+id/subjectText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/towhoText"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/subject_hint"
        android:inputType="text" />


    <Button
        android:id="@+id/gener_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        android:text="CLICK HERE TO generate qr code"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="481dp" />


</RelativeLayout>
