<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demiurge.qrscannerd.TextResultHandlerActivity">


    <LinearLayout
        android:id="@+id/textresult_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/app_bar"
            android:id="@+id/text_res_app_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </include>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textresult_app_bar_layout">

        <TextView
            android:id="@+id/text_result_handler"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="false"
            android:maxLength="20000"
            android:maxLines="100"
            android:paddingTop="30dp" />

    </LinearLayout>


</RelativeLayout>
