<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demiurge.qrscannerd.MeCardActivity"
    android:background="@drawable/vcard">


    <include
        layout="@layout/app_bar"
        android:id="@+id/mecard_back_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </include>


    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/mecard_back_bar"
        android:paddingLeft="50dp"
        android:id="@+id/name_error_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="68dp"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/name_error_input"
        android:layout_marginTop="0dp"
        android:paddingLeft="50dp"
        android:id="@+id/phone_error_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="141dp">
        </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/phone_error_input"
        android:paddingLeft="50dp"
        android:layout_marginTop="0dp"
        android:id="@+id/comp_error_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/companyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Company"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="141dp">
        </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/comp_error_input"
        android:paddingLeft="50dp"
        android:layout_marginTop="0dp"
        android:id="@+id/email_error_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="141dp">
        </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/email_error_input"
        android:paddingLeft="50dp"
        android:layout_marginTop="0dp"
        android:id="@+id/address_error_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="Address"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="141dp">
        </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>




    <Button
        android:id="@+id/gener_mecard_button"
        android:layout_below="@+id/address_error_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="CLICK HERE TO generate qr code"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="481dp" />

</RelativeLayout>
